<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_tree" model="ir.ui.view">
        <field name="name">mitsu_sale.project_temp_task.list</field>
        <field name="model">mitsu_sale.project_temp_task</field>
        <field name="arch" type="xml">
            <list string="Taches" editable="top">
                <field name="name"/>
                <field name="project_temp_id" />
            </list>
        </field>
    </record>

    <record id="action_project_task" model="ir.actions.act_window">
        <field name="name">Project Tasks</field>
        <field name="res_model">mitsu_sale.project_temp_task</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
          </p><p>
            Creez une tache.
          </p>
        </field>
    </record>

    <menuitem
        id="menu_project_config_task"
        name="Taches Modeles"
        action="action_project_task"
        parent="project.menu_project_config"
        sequence="11"/>

</odoo>
