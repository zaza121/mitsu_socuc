<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_jsa_questions_tree" model="ir.ui.view">
        <field name="name">jsa.questions.tree</field>
        <field name="model">jsa.questions</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="stage"/>
                <field name="question"/>
                <field name="active" invisible="true"/>
            </list>
        </field>
    </record>
    <record id="view_jsa_questions_form" model="ir.ui.view">
        <field name="name">jsa.questions.form</field>
        <field name="model">jsa.questions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="question"/>
                        <h1><field name="question" string="Question" placeholder="e.g. what colour is the sky"/></h1>
                    </div>
                    <group>
                        <field name="stage"/>
                        <field name="active" invisible="true"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_jsa_questions_search" model="ir.ui.view">
        <field name="name">jsa.questions.search</field>
        <field name="model">jsa.questions</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="group_by_stage" context="{'group_by': 'stage'}"/>
            </search>
        </field>
    </record>
    <record id="action_jsa_questions" model="ir.actions.act_window">
        <field name="name">Questions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">jsa.questions</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="context">{'search_default_group_by_stage': 1}</field>
        <field name="help" type="html">
            <p class="'o_view_nocontent_smiling_face">
                Add your questions!
            </p>
        </field>
    </record>
    <menuitem
            id="menu_jsa_questions"
            name="Questions"
            action="action_jsa_questions"
            parent="client_equipment.menu_configuration"
            sequence="3"/>
</odoo>
