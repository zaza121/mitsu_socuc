<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_jsa_pre_responses_list" model="ir.ui.view">
        <field name="name">jsa_pre.responses.tree</field>
        <field name="model">jsa_pre.responses</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="question"/>
                <field name="answer" widget="radio" options="{'horizontal': True}"/>
            </list>
        </field>
    </record>


    <record id="view_jsa_pre_responses_search" model="ir.ui.view">
        <field name="name">jsa_pre.responses.search</field>
        <field name="model">jsa_pre.responses</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="active" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_jsa_pre_responses" model="ir.actions.act_window">
        <field name="name">Pre Responses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">jsa_pre.responses</field>
        <field name="view_mode">list</field>
        <field name="target">new</field>
        <field name="context">{'search_default_group_by_stage': 1}</field>
        <field name="help" type="html">

            <p class="'o_view_nocontent_smiling_face">
                Add your responses!
            </p>
        </field>
    </record>

