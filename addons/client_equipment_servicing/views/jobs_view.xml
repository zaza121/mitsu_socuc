<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_equipment_jobs_form2_inherit" model="ir.ui.view">
            <field name="name">project.task.jobs.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <notebook  position="inside">
                    <field name="project_name" invisible="1"/>
                    <page name="jobs" string="Jobs"  widget="section_and_note_one2many" 
                        invisible="project_name != 'Field Service'">
                        <list>
                            <field name="equipment_ids"/>
                        </list>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
