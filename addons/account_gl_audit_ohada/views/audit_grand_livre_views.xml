<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_audit_grand_livre_tree" model="ir.ui.view">
        <field name="name">audit.grand.livre.tree</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <tree string="Anomalies du Grand Livre">
                <field name="date"/>
                <field name="compte"/>
                <field name="intitule"/>
                <field name="debit" sum="Total Débit"/>
                <field name="credit" sum="Total Crédit"/>
                <field name="type_anomalie"/>
            </tree>
        </field>
    </record>

    <record id="view_audit_grand_livre_form" model="ir.ui.view">
        <field name="name">audit.grand.livre.form</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <form string="Audit Grand Livre">
                <header>
                    <button string="Lancer l'audit" type="object" name="run_audit" class="oe_highlight"/>
                    <button string="Exporter Excel" type="object" name="export_to_excel" attrs="{'invisible': [('export_file','=',False)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                        </group>
                        <group>
                            <field name="classes_comptes" widget="many2many_tags"/>
                        </group>
                    </group>
                    <separator string="Résultats"/>
                    <group>
                        <field name="export_file" filename="export_filename" readonly="1" invisible="not export_file"/>
                        <field name="export_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_audit_grand_livre_action" model="ir.actions.act_window">
        <field name="name">Audit Grand Livre</field>
        <field name="res_model">audit.grand.livre</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_audit_gl_root" name="Audit Comptable"/>
    <menuitem id="menu_audit_gl" name="Grand Livre SYSCOHADA" parent="menu_audit_gl_root" action="view_audit_grand_livre_action"/>
</odoo>