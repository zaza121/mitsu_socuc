<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form.view.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='raw_materials']/field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <field name="alternative_component_ids" widget="many2many_tags" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>