<odoo>
    <record id="mrp_bom_line_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.line.form.view.inherit</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="alternative_component_ids" widget="many2many_tags"/>
                <field name="priority"/>
            </xpath>
        </field>
    </record>
</odoo>