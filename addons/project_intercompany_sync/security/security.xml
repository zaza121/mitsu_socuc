<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">

    <record id="project_project_intersoc_rule" model="ir.rule">
      <field name="name">Project Project: owners or followers only</field>
      <field name="model_id" ref="project.model_project_project"/>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="domain_force">['|', ('create_uid', '=', user.id), ('message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>

    <record id="project_task_intersoc_rule" model="ir.rule">
      <field name="name">Project Task: owners or followers only</field>
      <field name="model_id" ref="project.model_project_task"/>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="domain_force">['|', ('create_uid', '=', user.id), ('message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>

    <record id="planning_slot_intersoc_rule" model="ir.rule">
      <field name="name">Planning Slot: employee or task follower only</field>
      <field name="model_id" ref="planning.model_planning_slot"/>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('task_id.message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>

    <record id="analytic_line_intersoc_rule" model="ir.rule">
      <field name="name">Analytic Line: owners or task followers only</field>
      <field name="model_id" ref="analytic.model_account_analytic_line"/>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="domain_force">['|', ('create_uid', '=', user.id), ('task_id.message_partner_ids', 'in', [user.partner_id.id])]</field>
    </record>

  </data>
</odoo>
