<odoo>
    <!-- Tree view -->
    <record id="view_audit_grand_livre_tree" model="ir.ui.view">
        <field name="name">audit.grand.livre.tree</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <list delete="true">
                <field name="date"/>
                <field name="compte"/>
                <field name="intitule"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="type_anomalie"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_audit_grand_livre_form" model="ir.ui.view">
        <field name="name">audit.grand.livre.form</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <form string="Audit Grand Livre">
                <header>
                    <button string="Lancer l'audit" type="object" name="action_run_audit" class="btn-primary"/>
                    <button string="Audit Mois Courant" type="object" name="audit_mois_courant" class="btn-info"/>
                    <button string="Audit Trimestre Courant" type="object" name="audit_trimestre_courant" class="btn-warning"/>
                    <button string="Audit Année Courante" type="object" name="audit_annee_courante" class="btn-success"/>
                    <button string="Exporter Excel" type="object" name="export_to_excel" class="btn-success"/>
                </header>
                <sheet>
                    <group string="Période &amp; Sélection">
                        <field name="date_debut"/>
                        <field name="date_fin"/>
                        <field name="classes_comptes" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group string="Dernière anomalie (lecture)">
                        <field name="date" readonly="1"/>
                        <field name="compte" readonly="1"/>
                        <field name="intitule" readonly="1"/>
                        <field name="debit" readonly="1"/>
                        <field name="credit" readonly="1"/>
                        <field name="type_anomalie" readonly="1"/>
                        <field name="export_file" filename="export_filename" readonly="1"/>
                        <field name="export_filename" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_audit_grand_livre" model="ir.actions.act_window">
        <field name="name">Audit Grand Livre</field>
        <field name="res_model">audit.grand.livre</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_audit_grand_livre_root" name="Audit Comptable" sequence="10"/>
    <menuitem id="menu_audit_grand_livre" name="Grand Livre SYSCOHADA" parent="menu_audit_grand_livre_root"
              action="action_audit_grand_livre" sequence="10"/>
</odoo>
