<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_audit_grand_livre_list" model="ir.ui.view">
        <field name="name">audit.grand.livre.list</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <list string="Anomalies du Grand Livre" decoration-info="not compte">
                <field name="date"/>
                <field name="compte"/>
                <field name="intitule"/>
                <field name="debit" sum="Total Débit"/>
                <field name="credit" sum="Total Crédit"/>
                <field name="type_anomalie"/>
            </list>
        </field>
    </record>

    <record id="view_audit_grand_livre_form" model="ir.ui.view">
        <field name="name">audit.grand.livre.form</field>
        <field name="model">audit.grand.livre</field>
        <field name="arch" type="xml">
            <form string="Audit Grand Livre">
                <header>
                    <button string="Lancer l'audit" type="object" name="action_run_audit" class="oe_highlight"/>
                    <button string="Mois courant" type="object" name="audit_mois_courant"/>
                    <button string="Trimestre courant" type="object" name="audit_trimestre_courant"/>
                    <button string="Année courante" type="object" name="audit_annee_courante"/>
                    <button string="Exporter Excel" type="object" name="export_to_excel"
                            invisible="not export_file"/>
                </header>
                <sheet>
                    <group string="Paramètres">
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                        </group>
                        <group>
                            <field name="classes_comptes"
                                    options="{'no_create': True, 'no_edit': True}"
                                    placeholder="Laissez vide pour tous les comptes"/>
                        </group>
                    </group>
                    <separator string="Résultats"/>
                    <group>
                        <field name="export_file" filename="export_filename"
                                readonly="1" invisible="not export_file"/>
                        <field name="export_filename" invisible="1"/>
                        
                        <field name="type_anomalie" readonly="1"
                                invisible="not type_anomalie"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_audit_grand_livre" model="ir.actions.act_window">
        <field name="name">Audit Grand Livre SYSCOHADA</field>
        <field name="res_model">audit.grand.livre</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_audit_root" name="Audit Comptable" sequence="10"/>
    <menuitem id="menu_audit_grand_livre" name="Grand Livre SYSCOHADA"
              parent="menu_audit_root" action="action_audit_grand_livre" sequence="10"/>
</odoo>