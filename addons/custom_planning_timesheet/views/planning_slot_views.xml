<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="planning_view_form_inherit_timesheet" model="ir.ui.view">
<field name="name">planning.slot.form.inherit.timesheet</field>
<field name="model">planning.slot</field>
<field name="inherit_id" ref="planning.planning_slot_view_form"/>
<field name="arch" type="xml">
<xpath expr="//button[@name='action_publish_send']" position="after">
<button name="action_generate_timesheet" string="Générer Timesheet" type="object" class="btn-secondary"/>
</xpath>

<xpath expr="//field[@name='resource_id']" position="attributes">
<attribute name="invisible">0</attribute>
</xpath>

<xpath expr="//field[@name='role_id']" position="after">
<field name="project_id"/>
<field name="task_id"/>
<field name="sale_line_name" readonly="1"/>
</xpath>
</field>
</record>
</odoo>