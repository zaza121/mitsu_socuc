<odoo>

	<record id="view_stock_comparatif_report_form" model="ir.ui.view">
        <field name="name">opsol_costadoro.stock_comparatif_report.form</field>
        <field name="model">opsol_costadoro.stock_comparatif_report</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Estimation" sample="1">
                <!-- <field name="date_year" type="col"/> -->
                <field name="partner_id" type="row"/>
                <field name="estimation" type="measure"/>
                <field name="product_qty" type="measure"/>
                <field name="est_diff" type="measure"/>
             </pivot>
        </field>
    </record>

    <record id="view_stock_comparatif_report_filter" model="ir.ui.view">
        <field name="name">opsol_costadoro.stock_comparatif_report.lead</field>
        <field name="model">opsol_costadoro.stock_comparatif_report</field>
        <field name="arch" type="xml">
            <search string="Search estimation">
                <field name="partner_id" />
                <field name="date_year" />
                <filter string="Annee en cours" name="filter_curr_year"
                    domain="[('date_year', '=', context_today().strftime('%Y'))]" />
            </search>
        </field>
    </record>

    <record id="view_stock_comparatif_report_tree" model="ir.ui.view">
        <field name="name">opsol_costadoro.stock_comparatif_report.tree</field>
        <field name="model">opsol_costadoro.stock_comparatif_report</field>
        <field name="arch" type="xml">
            <list string="Zones commerciales">
                <field name="date_year" />
                 <field name="estimation" />
                 <field name="partner_id" />
                 <field name="product_qty" />
                 <field name="est_diff" />
            </list>
        </field>
    </record>

    <record id="action_stock_comparatif_report" model="ir.actions.act_window">
        <field name="name">Analyse Livraison - Estimation</field>
        <field name="res_model">opsol_costadoro.stock_comparatif_report</field>
        <field name="view_mode">pivot,list</field>
        <field name="context">{'search_default_filter_curr_year':True}</field>
        <field name="help" type="html">
          <p></p>
        </field>
    </record>

    <menuitem 
        id="menu_client_equipment_analyse_estim"
        name="Analyse Livraison - Estimation"
        action="action_stock_comparatif_report"
        parent="opsol_costadoro.menu_client_equipment_analyse"
        sequence="21" />

</odoo>