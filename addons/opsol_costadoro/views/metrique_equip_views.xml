<odoo>

	<record id="view_metrique_equip_form" model="ir.ui.view">
        <field name="name">opsol_costadoro.metrique_equip.form</field>
        <field name="model">opsol_costadoro.metrique_equip</field>
        <field name="arch" type="xml">
            <form string="Metrique Equipments">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h3><field name="name" required="True"/></h3>
                    </div>
                    <group>
                        <group>
                            <field name="uom_id" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <record id="view_metrique_equip_filter" model="ir.ui.view">
        <field name="name">opsol_costadoro.metrique_equip.lead</field>
        <field name="model">opsol_costadoro.metrique_equip</field>
        <field name="arch" type="xml">
            <search string="Search Metrique">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="view_metrique_equip_tree" model="ir.ui.view">
        <field name="name">opsol_costadoro.metrique_equip.tree</field>
        <field name="model">opsol_costadoro.metrique_equip</field>
        <field name="arch" type="xml">
            <list string="Metrique equipment">
                <field name="name"/>
                <field name="uom_id"/>
                <field name="description" optional="show" />
            </list>
        </field>
    </record>

    <record id="action_metrique_equip" model="ir.actions.act_window">
        <field name="name">Metrique Equipement</field>
        <field name="res_model">opsol_costadoro.metrique_equip</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p>Creez une nouvelle metrique pour equipement.</p>
        </field>
    </record>

    <menuitem 
        id="menu_sale_config_metreq"
        name="Metrique Equipments"
        action="action_metrique_equip"
        parent="client_equipment.menu_configuration"
        sequence="21" />

</odoo>