<odoo>

	<record id="purchase_order_form_opsol2" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='order_line']/list[1]/field[@name='name']" position="after">
                <field name="in_store" optional="show" />
                <field name="aj_note" optional="show" />
            </xpath>

        </field>
    </record>

</odoo>