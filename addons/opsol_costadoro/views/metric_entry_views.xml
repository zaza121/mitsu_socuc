<odoo>

    <record id="view_metric_entry_filter" model="ir.ui.view">
        <field name="name">opsol_costadoro.metric_entry.search</field>
        <field name="model">opsol_costadoro.metric_entry</field>
        <field name="arch" type="xml">
            <search string="Recherche entree">
                <field name="partner_id" />
                <field name="equipment_id" />
            </search>
        </field>
    </record>

    <record id="view_metric_entry_tree" model="ir.ui.view">
        <field name="name">opsol_costadoro.metric_entry.tree</field>
        <field name="model">opsol_costadoro.metric_entry</field>
        <field name="arch" type="xml">
            <list string="Entree metrique" editable="top">
                <field name="equipment_id"/>
                <field name="line_metric_id" />
                <field name="value"/>
                <field name="uom_id"/>
                <field name="date_start" optional="hide" />
                <field name="date_end" optional="hide" />
                <field name="note" optional="show" />
            </list>
        </field>
    </record>

    <record id="action_metric_entry" model="ir.actions.act_window">
        <field name="name">Entree de mesure</field>
        <field name="res_model">opsol_costadoro.metric_entry</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p>Enregistrer une nouvelle mesure.</p>
        </field>
    </record>

    <menuitem 
        id="menu_client_equipment_entrymet"
        name="Entries"
        action="action_metric_entry"
        parent="opsol_costadoro.menu_client_equipment_suivi"
        sequence="16" />

</odoo>