<odoo>

    <record id="view_model_equip_filter" model="ir.ui.view">
        <field name="name">opsol_costadoro.model_equip.search</field>
        <field name="model">opsol_costadoro.model_equip</field>
        <field name="arch" type="xml">
            <search string="Recherche entree">
                <field name="name" />
                <field name="description" />
            </search>
        </field>
    </record>

    <record id="view_model_equip_tree" model="ir.ui.view">
        <field name="name">opsol_costadoro.model_equip.tree</field>
        <field name="model">opsol_costadoro.model_equip</field>
        <field name="arch" type="xml">
            <list string="Entree metrique" editable="top">
                <field name="name"/>
                <field name="description" />
            </list>
        </field>
    </record>

    <record id="action_model_equip" model="ir.actions.act_window">
        <field name="name">Entree de mesure</field>
        <field name="res_model">opsol_costadoro.model_equip</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p>Enregistrer un nouveau modele.</p>
        </field>
    </record>

    <menuitem 
        id="menu_configuration_model_equip"
        name="Modele Equipment"
        action="action_model_equip"
        parent="client_equipment.menu_configuration"
        sequence="16" />

</odoo>