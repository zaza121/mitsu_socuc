<odoo>

	<record id="view_zone_comm_form" model="ir.ui.view">
        <field name="name">opsol_costadoro.zone_comm.form</field>
        <field name="model">opsol_costadoro.zone_comm</field>
        <field name="arch" type="xml">
            <form string="Zone commerciale">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h3><field name="name" required="True"/></h3>
                    </div>
                    <group>
                        <group>
                            <field name="description" />
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_zone_comm_filter" model="ir.ui.view">
        <field name="name">opsol_costadoro.zone_comm.lead</field>
        <field name="model">opsol_costadoro.zone_comm</field>
        <field name="arch" type="xml">
            <search string="Search Zone">
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="view_zone_comm_tree" model="ir.ui.view">
        <field name="name">opsol_costadoro.zone_comm.tree</field>
        <field name="model">opsol_costadoro.zone_comm</field>
        <field name="arch" type="xml">
            <list string="Zones commerciales">
                <field name="name"/>
                <field name="description" optional="show" />
            </list>
        </field>
    </record>

    <record id="action_zone_comm" model="ir.actions.act_window">
        <field name="name">Zones Commerciales</field>
        <field name="res_model">opsol_costadoro.zone_comm</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p>Creez une nouvelle Zone Commerciale.</p>
        </field>
    </record>

    <menuitem 
        id="menu_sale_config_zone"
        name="Zone commerciale"
        action="action_zone_comm"
        parent="sale.menu_sale_config"
        sequence="21" />

</odoo>