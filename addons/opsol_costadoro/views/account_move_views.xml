<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="account_move_form_inh" model="ir.ui.view">
            <field name="name">account.move.order_line</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='to_check']" position="after">
                    <field name="auto_order_line" />
                    <field name="opsol_sale_order_ids" widget="many2many_tags" invisible="opsol_sale_order_ids == []"/>
                </xpath>

                <xpath expr="//button[@name='button_cancel']" position="after">
                    <button name="reorder_line" invisible="state in ['draft']" type="object" string="Group by category" data-hotkey="o" />
                </xpath>

                <xpath expr="//page[@id='invoice_tab']//field[@name='price_total']" position="after">
                    <field name="rubrique" optional="hide"/>
                </xpath>

            </field>
        </record>
    
    </data>
</odoo>