<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_equipment_jobs_form2_inherit" model="ir.ui.view">
            <field name="name">project.task.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='jobs']" position="attributes">
                    <attribute name="invisible">not is_fsm</attribute>
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="type_intervention" />
                    <field name="localisation_intervention" />
                    <field name="facturer_intervention" />
                </xpath>

                <xpath expr="//field[@name='date_deadline']/.." position="after">
                    <field name="quick_equipment_ids" widget="many2many_tags" />
                </xpath>

                <xpath expr="//notebook[1]" position="inside">
                    <page string="Metriques Actuelles" name="tab_metric" context="{'default_equipment_id': id}">
                        <field name="lines_metric_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="equipment_id" />
                                <field name="metric_id"/>
                                <field name="reference_intervention"/>
                                <field name="uom_id"/>
                                <field name="current_measure"/>
                                <field name="progress_metric" widget="percentage" column_invisible="1"/>
                                <field name="progress_metric_per" widget="badge" decoration-danger="progress_metric &gt; 1" decoration-success="progress_metric &lt; 0.9" decoration-warning="progress_metric &lt;= 1 and progress_metric &gt;= 0.9"/>
                                <field name="equipment_id" />
                                <field name="partner_id" column_invisible="1"/>
                            </list>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
