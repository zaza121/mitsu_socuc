<odoo>

	<record id="view_equipment_jobs_list_opsol" model="ir.ui.view">
        <field name="name">equipment.jobs.list.opsol</field>
        <field name="model">equipment.jobs</field>
        <field name="inherit_id" ref="client_equipment.view_equipment_jobs_tree"/>
        <field name="arch" type="xml">

            <field name="assignee" position="after">
                <field name="report" widget="html" />
            </field>

            <xpath expr="//list[1]" position="attributes">
                <attribute name="default_order">service_date desc</attribute>
            </xpath>

        </field>
    </record>

</odoo>