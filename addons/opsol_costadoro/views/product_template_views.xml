<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="product_template_only_form_view_inh_bi_sale" model="ir.ui.view">
            <field name="name">product.template.form.bi_sale</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                
                <field name="categ_id" position="after">
                    <field name="is_cafe" />
                </field>

                <xpath expr="//notebook[1]" position="inside">
                    <page string="Metriques" name="product_metric">
                        <field name="metrics_ids" nolabel="1"/>
                    </page>
                </xpath>

            </field>
        </record>
        
    </data>
</odoo>