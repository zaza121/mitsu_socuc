<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="planning_view_search_base_mitsu" model="ir.ui.view">
      <field name="name">planning.slot.search.mitsu</field>
      <field name="model">planning.slot</field>
      <field name="inherit_id" ref="planning.planning_view_search_base"/>
      <field name="arch" type="xml">
          <xpath expr="//filter[@name='my_team_shifts']" position="after">
              <filter name="my_team_task" string="Tâches Équipe" domain="[('manager_ids', 'in', [uid])]" help="Tâches de vos équipes" groups="planning.group_planning_user"/>
          </xpath>
      </field>
  </record>
</odoo>
