<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_equipe_form" model="ir.ui.view">
        <field name="name">mitsu_hr.equipe.form</field>
        <field name="model">mitsu_hr.equipe</field>
        <field name="arch" type="xml">
            <form string="Job">
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Sales Manager"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="manager_id" />
                            <field name="departments_ids" widget="many2many_tags" />
                            <field name="extra_employee_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="employee_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_equipe_tree" model="ir.ui.view">
        <field name="name">mitsu_hr.equipe.list</field>
        <field name="model">mitsu_hr.equipe</field>
        <field name="arch" type="xml">
            <list string="Equipes" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="departments_ids" widget="many2many_tags" optional="show" />
            </list>
        </field>
    </record>

