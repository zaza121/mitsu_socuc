<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_invoice_policy_inherit_sale_planning_mitsu" model="ir.ui.view">
        <field name="name">product.template.form.mitsu</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale_planning.product_template_form_view_invoice_policy_inherit_sale_planning"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@name='service_policy_div']" position="after">
                <field name="employee_id" invisible="type != 'service' or not sale_ok" domain="[('planning_role_ids', 'in', [planning_role_id])]"/>
            </xpath>

        </field>
    </record>

</odoo>
