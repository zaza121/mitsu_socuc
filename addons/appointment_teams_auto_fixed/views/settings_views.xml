<odoo>
    <record id="view_res_config_settings_inherit_appointment_teams" model="ir.ui.view">
        <field name="name">res.config.settings.view.inherit.appointment.teams</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Microsoft Teams">
                    <h2>Configuration Teams pour Rendez-vous</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Activer l'intégration</span>
                                <field name="teams_enabled"/>
                                <div class="text-muted">
                                    Générer un lien Teams pour les types de rendez-vous activés.
                                </div>
                                <field name="teams_account_email"/>
                                <div class="text-muted">
                                    L'adresse email de l'utilisateur qui crée la réunion (doit exister dans Azure AD).
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" title="Azure AD Credentials">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Credentials Azure AD (Client Credentials Flow)</span>
                                <field name="teams_tenant_id"/>
                                <field name="teams_client_id"/>
                                <field name="teams_client_secret" password="True"/>
                                <field name="teams_azure_primary_domain" string="Domaine Primaire Azure (ex: monentreprise.com)"/>
                            </div>
                        </div>
                    </div>
                    
                    <h2 class="mt32">Outil d'Administration (Optionnel)</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                             <field name="teams_auto_create_user"/>
                             <div class="text-muted">
                                 Nécessite des permissions Azure pour la création de comptes.
                             </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3" role="alert">
                        L'application Azure doit avoir au moins les permissions <code>OnlineMeetings.ReadWrite.All</code> et <code>User.ReadWrite.All</code> (pour la création de compte service).
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
