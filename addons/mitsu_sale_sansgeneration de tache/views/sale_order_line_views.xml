<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_force_distribution" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.analytic</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Ex : ajouter un champ force_distribution_id sur l'entête si nécessaire -->
            <xpath expr="//sheet/notebook/page[@string='Order Lines']" position="inside">
                <group>
                    <field name="force_distribution_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_order_line_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="role_id"/>
                <field name="force_modele_id"/>
            </xpath>
        </field>
    </record>
</odoo>
